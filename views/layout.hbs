<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/app-stylesheets.css'/>
    <script src="/javascripts/app-front-end.js"></script>
</head>
<body>
<div class="container">

    <!-- Static navbar -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Anagram Reviewer</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    {{#if user}}
                        <li><a href="/anagrams">Anagrams</a></li>
                        <li><a href="/account/profile">Profile</a></li>
                    {{/if}}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {{#if user}}
                        <li><a href="/account/logout">Signed in as {{user.username}}. Sign out</a></li>
                    {{ else }}
                        <li><a href="/account/login">Sign in</a></li>
                    {{/if}}
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>

    {{#if errorMessage}}
        <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}
    {{#if infoMessage}}
        <div class="alert alert-info">{{infoMessage}}</div>
    {{/if}}
    {{#if successMessage}}
        <div class="alert alert-success">{{successMessage}}</div>
    {{/if}}

    {{{body}}}

</div> <!-- /container -->
</body>
</html>

